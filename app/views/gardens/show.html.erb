<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1 class='text-center'><%= @garden.name %></h1>
  </div>
</div>
<hr>
<div class="container">
  <div class="row">
    <% @garden.plants.each do |plant| %>
      <div class="col-md-4">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url  %>')">
          <%= plant.name %> 
          <%= link_to 'x', plant_path(plant), method: :delete, data: { confirm: 'Are you sure you want to delete?'}, class: 'card-remove-link' %>
          
        </div>
      </div>
    <% end %>
  </div>
</div>
<hr>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h4>Add a new plant: ðŸŒ´</h4>
      <%= simple_form_for [ @garden, @plant] do |f| %>
        <%= f.input :name, placeholder: 'Palm tree' %>
        <%= f.input :image_url, placeholder: 'https://some_nice_plant_image_from_google.jpg' %>
        <%= f.submit 'Add', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>